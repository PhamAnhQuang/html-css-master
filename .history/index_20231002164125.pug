mixin tourItem(image, price, title, reiview, reiviewCount)
    .tour               
        .tour-top
            img.tour-image(src=image, alt='bali')
            span.tour-price=price
        .tour-content
            .tour-title= title
            .tour-rating
                .tour-review
                    .tour-star
                    img(src='./images/star.png', alt='star')
                    .tour-review-count 
                        span = review 
                        | (#{reviewCount} reviews)
                .tour-duration Duration: 9 hours
            a.tour-button(href='', target='_blank', rel='noopener noreferrer') Tours Price $61
