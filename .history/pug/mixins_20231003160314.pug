mixin tourItem(image, price, title, review, reviewCount, duration, tourPrice)
    .tour               
        .tour-top
            img.tour-image(src=image, alt='bali')
            span.tour-price=price
        .tour-content
            .tour-title= title
            .tour-rating
                .tour-review
                    .tour-star
                    img(src='./images/star.png', alt='star')
                    .tour-review-count 
                        span= review 
                            | (#{reviewCount} reviews)
                .tour-duration Duration: #{duration}
            a.tour-button(href='', target='_blank', rel='noopener noreferrer') Tours Price #{tourPrice}

mixin popularItem()
    .popular
        .popular-image
            img.popular-img(src="https://images.unsplash.com/photo-1695425173758-37e9c23b962a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHw0fHx8ZW58MHx8fHx8&auto=format&fit=crop&w=500&q=60",alt="")
            span.popular-label Must see 
        .popular-content
            time.popular-time Sep 28 10:00 AM - 1:00 PM
            h3.popular-title The Grand Palace 
            .popular-review
                img(src="/images/star.png",alt="star")
                span 4.8 (12 reviews)